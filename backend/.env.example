# Porta do servidor
PORT=3001

# Secret para JWT (mude em produção!)
JWT_SECRET=seu_secret_jwt_aqui_mude_em_producao
JWT_EXPIRES_IN=7d

# Credenciais do admin (será criado no seed)
ADMIN_NAME=Administrador
ADMIN_EMAIL=admin@exemplo.com
ADMIN_PASSWORD=senha_segura_aqui

# Caminho do banco de dados SQLite
DB_PATH=./database.sqlite

# Diretório para uploads de mídia
UPLOAD_DIR=./uploads

# Ambiente (development ou production)
NODE_ENV=development

# URL base para links de mídia (opcional, padrão usa localhost:PORT)
# BASE_URL=http://localhost:3001
